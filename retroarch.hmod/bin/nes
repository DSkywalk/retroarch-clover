#!/bin/sh
core=fceumm
filename="$1"
extension="${filename##*.}"
if [ "$extension" == "fds" ] || [ "$extension" == "qd" ]; then
  core=nestopia
  if [ ! -f /etc/libretro/system/disksys.rom ]; then
    cp -f /usr/share/kachikachi/fds_bios.bin /etc/libretro/system/disksys.rom
  fi
fi

exec retroarch-clover "$core" "$@" --ra-allow-crt
